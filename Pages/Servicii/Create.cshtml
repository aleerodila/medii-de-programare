@page
@model Salon.Pages.Servicii.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Serviciu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Serviciu.Numeserviciu" class="control-label"></label>
                <input asp-for="Serviciu.Numeserviciu" class="form-control" />
                <span asp-validation-for="Serviciu.Numeserviciu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Serviciu.ProfesionistID" class="control-label"></label>
                <input asp-for="Serviciu.ProfesionistID" class="form-control" />
                <span asp-validation-for="Serviciu.ProfesionistID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Serviciu.Pret" class="control-label"></label>
                <input asp-for="Serviciu.Pret" class="form-control" />
                <span asp-validation-for="Serviciu.Pret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Serviciu.OrarID" class="control-label"></label>
                <input asp-for="Serviciu.OrarID" class="form-control" />
                <span asp-validation-for="Serviciu.OrarID" class="text-danger"></span>
            </div>
            <div class="form-group">
 <div class="table">
 <table>
 <tr>
 @{
 int cnt = 0;
 foreach (var cat in Model.AssignedCategoryDataList)
 {
 if (cnt++ % 3 == 0)
{
@:</tr><tr>
 }
@:<td>
 <input type="checkbox"
 name="selectedCategories"
 value="@cat.CategorieID"
 @(Html.Raw(cat.Assigned ? 
"checked=\"checked\"" : "")) />
 @cat.CategorieID @: @cat.Nume
 @:</td>
 }
 @:</tr>
 }
 </table>
 </div>
 </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
